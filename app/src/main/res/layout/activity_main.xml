        <Button
            android:id="@+id/buttonImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Foto"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/setPicture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/contentDescriptionImagenSet"
            android:layout_below="@+id/buttonImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/setPicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:layout_below="@+id/buttonImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/setPicture"
            android:layout_alignEnd="@+id/setPicture"
            android:textSize="20dp"
            android:textStyle="bold" />
    <!--</LinearLayout>-->


</RelativeLayout>