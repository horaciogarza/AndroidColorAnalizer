<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#3F51B5"
     tools:context="com.hgarzstudios.ColorAnalyzer.proyecto.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:textSize="20dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal" />


        <ImageView
            android:id="@+id/setPicture"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:contentDescription="@string/contentDescriptionImagenSet"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:layout_marginTop="15dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/setPicture"
            android:layout_alignEnd="@+id/setPicture"
            android:textSize="20dp"
            android:text="Color: #000000"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">



            <Button

                android:id="@+id/buttonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:width="150dp"
                android:text="@string/AnalyzeButtonString"
                android:layout_gravity="center"


                android:textSize="20dp"
                android:background="@drawable/button_bg"

                android:layout_centerHorizontal="true"/>
            <Button

                android:id="@+id/pinColor"
                android:layout_width="65dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="\u2605"
                android:layout_gravity="center"
                android:textColor="#ffd700"
                android:textSize="25dp"
                android:background="@drawable/button_bg_gold"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>